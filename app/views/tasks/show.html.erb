<%= link_to("Back to list", tasks_path, class: 'back-link') %>

<div class="tasks show">
    <h2>Show task</h2>

    <div class="actions">
        <%= link_to('Edit', edit_task_path(@task))%>
        <%= link_to('Delete', delete_task_path(@task))%>
    </div>

    <table summary="T^ask detail view">
        <tr>
            <th>Name</th>
            <td><%= @task.name%></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @task.position%></td>
        </tr>
        <tr>
            <th>Completed</th>
            <td><%= @task.completed? ? 'Yes' : 'No'%></td>
        </tr>
        <tr>
            <th>Description</th>
            <td><%= @task.description%></td>
        </tr>
    </table>

</div>